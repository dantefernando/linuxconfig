#!/bin/sh

# This script is called from ~/.bashrc with the alias "zr"

# Checks if README.pdf exists in the current directory
# if exists, then read the file with zathura
# after the user closes zathura, then delete the README.pdf file.

if [[ -e README.pdf ]] ; then
		zathura README.pdf && rm README.pdf
else
		echo "There is no README.pdf file to read, try again."
fi

